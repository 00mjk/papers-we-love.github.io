<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
        <meta content="width=device-width" name="viewport">
        <% if current_page.data.description.nil? %>
            <meta name="description" content="A repository of computer science papers and a community of people who love reading them" />
        <% else %>
            <meta name="description" content="<%= current_page.data.description %>" />
        <% end %>
        <title><%= "#{current_article.title} |" unless current_article.nil? %> Papers We Love</title>
        <%= stylesheet_link_tag "font-awesome.min","screen" %>
        <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
        <%= favicon_tag 'favicon.ico' %>
        <link href="/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script>
         (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
             (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                                  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                                  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

         ga('create', 'UA-53240153-1', 'auto');
         ga('send', 'pageview');
        </script>
    </head>
    <body id="generic" itemscope itemtype="http://schema.org/WebPage">
        <%= partial 'partials/header' %>

        <div id="main" role="main" itemprop="mainContentOfPage">
            <%= yield %>
        </div>

        <%= partial 'partials/footer' %>
    </body>
</html>
